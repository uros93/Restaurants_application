<h1>Edit restaurant</h1>
<%= form_for(@restaurant, :url=>{:action=>'update'}) do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name %><br>
<%= f.label :description %><br>
<%= f.text_area :description %><br>
<%= f.label :adresa %><br>
<%= f.text_field :adresa %><br>
<%= f.submit "Edit" %>
<% end %>