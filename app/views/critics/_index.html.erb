<% critics.each do |c| %>
<div class="well">
<p><h5><%= c.user.nick %></h5>
<%= c.created_at %> </p>
<h3><%= link_to c.title,  restaurant_critic_path(restaurant.id, c.id) %></h3>
<p><%= c.content %></p>
<%if can? :destroy, c %>
<%= link_to "Delete critic", restaurant_critic_path(restaurant.id, c.id), method: :delete %>
<%end%>
<%if can? :update, c %>
<%= link_to "Edit critic", edit_restaurant_critic_path(restaurant.id, c.id) %>
<%end%>
</div>

<% end %>